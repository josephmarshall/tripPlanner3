<%= button_to "Log Out", destroy_user_session_path, method: :delete %>

<%= link_to 'New Trip', new_trip_path %>

<h1>Your Trips</h1>
<hr />
<div class="container">
  <div class="row">
    <div class="col">
      <ul>
        <% @trips.each do |trip| %>
          <li>
            <%= link_to trip.name, trip %>
            <%= link_to "Delete", trip, method: :delete %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
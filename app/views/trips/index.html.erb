<%= button_to "Log Out", destroy_user_session_path, method: :delete %>

<h1>Your Trips</h1>
<hr />
<div class="container">
  <div class="row">
    <div class="col">
      <ul>
        <% @trips.each do |trip| %>
          <li>
            <%= link_to trip.name, @trip %>
            <%= link_to @trip, method: :delete do %>
              <button type="button" class="close" aria-label="Remove"></button>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>